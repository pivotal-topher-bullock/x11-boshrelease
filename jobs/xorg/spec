  display:
    description: |
      The display id to use when starting Xorg
    default: 0
  video.ram:
    description: |
      The amount of video ram for the dummy graphics card in kBytes.
    default: 192000
  mode.name:
    description: |
      The name to use when specifying the ModeLine for the "Monitor" section
      and the Modes available to the "Screen" Section
    default: 1024x768
  mode.line:
